<div class="container">
  <div class="header">
    <h1>Email Preview</h1>
    <%= link_to "Back", email_template_path(@email_template), class: "btn btn-secondary" %>
  </div>

  <div class="email-preview">
    <div class="preview-field">
      <strong>Contact:</strong> <%= @contact.name %> (<%= @contact.email %>)
    </div>

    <div class="preview-field">
      <strong>Subject:</strong>
      <div class="preview-content"><%= @rendered[:subject] %></div>
    </div>

    <div class="preview-field">
      <strong>Body:</strong>
      <div class="preview-content"><%= simple_format(@rendered[:body]) %></div>
    </div>
  </div>
</div>
